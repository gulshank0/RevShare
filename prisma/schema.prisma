enum UserRole {
  CREATOR
  INVESTOR
  ADMIN
}

enum KYCStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum ChannelStatus {
  PENDING
  VERIFIED
  SUSPENDED
  REJECTED
}

enum OfferingStatus {
